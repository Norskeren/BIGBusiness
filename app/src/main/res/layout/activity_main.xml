<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="shortcutmakers.smalbusiness.MainActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="495dp"
        android:layout_marginBottom="16dp"
        android:background="#CC9900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0">

        <TextView
            android:id="@+id/title_alpha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#00FFFF"
            android:fontFamily="serif"
            android:text="Alpha productions!"
            android:textColor="@android:color/black"
            android:textSize="37sp" />

        <ImageView
            android:id="@+id/image_alpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/title_alpha"
            android:layout_marginTop="38dp"
            android:src="@drawable/alphawolf" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_alignBottom="@+id/image_alpha"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/image_alpha"
            android:layout_toEndOf="@+id/image_alpha"
            android:layout_toRightOf="@+id/image_alpha"
            android:text=""
            android:textSize="30sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_alpha"
            android:layout_marginTop="48dp"
            android:layout_toStartOf="@+id/textView"
            android:text="Button" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
