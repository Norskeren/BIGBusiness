<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="shortcutmakers.smalbusiness.MainActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="495dp"
        android:background="#FF0204">

        <TextView
            android:id="@+id/title_alpha"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:background="#ccddff"
            android:fontFamily="serif"
            android:text="Alpha productions!"
            android:textColor="@android:color/black"
            android:textSize="37sp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />

        <ImageView
            android:id="@+id/image_alpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/title_alpha"
            android:src="@drawable/AlphaWolf"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_alignBottom="@+id/image_alpha"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/image_alpha"
            android:layout_toEndOf="@+id/image_alpha"
            android:layout_toRightOf="@+id/image_alpha"
            android:text=""
            android:textSize="30sp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
